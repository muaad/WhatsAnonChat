= form_for @chat do |f|
  - if @chat.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chat.errors.count, "error")} prohibited this chat from being saved:"
      %ul
        - @chat.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :contact_id
    = f.number_field :contact_id
  .field
    = f.label :friend_id
    = f.number_field :friend_id
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
