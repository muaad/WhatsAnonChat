= form_for @wizard do |f|
  - if @wizard.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wizard.errors.count, "error")} prohibited this wizard from being saved:"
      %ul
        - @wizard.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :account
    = f.text_field :account
  .actions
    = f.submit 'Save'
